{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/phaser/types", "./types/"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "./types/**/*"],
  "exclude": ["node_modules", "public", "dist", "test", "docs", "tests"]
}
